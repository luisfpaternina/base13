<?xml version="1.0"?>
<odoo>
    <data>
	    <record id="view_res_partner_form_ol" model="ir.ui.view">
		    <field name="name">view_res_partner_form_ol</field>
		    <field name="model">res.partner</field>
		    <field name="inherit_id" ref="base.view_partner_form"/>
		    <field name="arch" type="xml">
    			<xpath expr="//group[@name='sale']" position="inside">
				    <field name="canal_venta_id" options="{'no_create': True, 'no_create_edit':True}"/>
				    <field name="tipo_entrega_id" options="{'no_create': True, 'no_create_edit':True}"/>
				    <!--field name="zona_id" options="{'no_create': True, 'no_create_edit':True}"/-->
			    </xpath>
    			<xpath expr="//field[@name='child_ids']/form/sheet/group[1]/group[1]" position="inside">
                    <field name="partner_latitude"/>
                    <field name="partner_longitude"/>
			    </xpath>
                <field name="street" position="attributes">
                    <attribute name="widget">gplaces_address_autocomplete</attribute>
                    <!-- the same for address_form widget -->
                    <!-- <attribute name="options">{'lat': 'partner_latitude', 'lng': 'partner_longitude', 'fillfields': {'street': ['route', 'street_number']}}</attribute> -->
                    <attribute name="options">{
                        'lat': 'partner_latitude',
                        'lng': 'partner_longitude',
                        'fillfields': {
                            'street_name': 'route',
                            'street_number': 'street_number',
                            'street2': ['administrative_area_level_3', 'administrative_area_level_4', 'administrative_area_level_5'],
                            'city': 'locality',
                            'zip': 'postal_code',
                            'state_id': 'administrative_area_level_1',
                            'country_id': 'country'
                        },
                        'address_form': {
                            'street_name': 'street_name',
                            'street_number': 'street_number',
                            'street2': 'street2',
                            'city': 'city',
                            'zip': 'zip',
                            'state_id': 'state_id',
                            'country_id': 'country_id',
                        },
                        'display_name': 'street_name',
                        'force_override': true
                    }</attribute>
                </field>
		    </field>
	    </record>
    </data>
</odoo>
